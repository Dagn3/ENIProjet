<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Sortir.com{% endblock %}</title>

    {# Bootstrap 5.1 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    {# Fonts : Josefin Sans / Regular 400 #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('test_pageTest')}}">
                    <img src="{{ asset('img/logo_eni.png') }}" alt="" width="54" height="54" class="d-inline-block align-text-top">
                    Sortir.com
                </a>
            </div>
        </nav>
        <nav>
            <ul class="nav justify-content-end">
                {# Liens dans la navbar, pour les admins uniquement.

                {%  if is_granted("ROLE_ADMIN") %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('#') }}" title="Villes">Villes</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" href="{{ path('#') }}" title="Campus">Campus</a>
                    </li>
                {% endif %}

                #}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('test_pageTest') }}" title="Accueil">Accueil</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_profil', {'username': app.user.username}) }}" title="Profil">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" title="Deconnecter">Se d√©connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}" title="Connecter">Se connecter</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </header>

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
    <main>
        {% block body %}

        {% endblock %}
    </main>
        </div>
    <footer class="fixed-bottom py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item">
                <a href="{{ path('test_pageTest') }}" class="nav-link px-2 text-muted" title="Accueil">Accueil</a>
            </li>
        </ul>
        <p class="text-center text-muted">&copy; {{ "now"|date("Y") }} : EDWMC058 - Team 2</p>
    </footer>
</body>
</html>
